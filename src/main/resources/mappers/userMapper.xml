<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pcw.user.dao.UserDAO">
	<select id="selectUserByUserIdAndPassword" resultType="com.pcw.user.model.User">
		SELECT
			`id`
			, `userId`
			, `userPw`
			, `userName`
			, `userEmail`
			, `userPhoneNumber`
			, `userAddress`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`userId` = #{userId}
			AND `userPw` = #{userPw}	
	</select>
</mapper>